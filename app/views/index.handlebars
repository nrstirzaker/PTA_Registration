

<div class="container">
  <div class="form-group">
    <h1>{{title}}</h1>
    <p>Welcome to {{title }}</p>
    <div id="message">{{message}}</div>
    {{> search }}
    {{> form }}

  </div>
</div>

<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirm</h5>
      </div>
      <div class="modal-body">
        <p>Please input the full name of the child you registered</p>
        <div class="form-group">
          <label for="contactNumber">Child's Full Name</label>
          <input type="text" id="confirmationChildsName" class="form-control" name="confirmationChildsName">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" id="modalClose" class="btn btn-success" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>